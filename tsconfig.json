{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "strict": false,
    "allowJs": true,
    "checkJs": true
  }
}